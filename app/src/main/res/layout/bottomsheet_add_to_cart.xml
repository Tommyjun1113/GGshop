<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <ImageView
        android:id="@+id/previewImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/previewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NT$0"
        android:textColor="#E53935"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/previewImage"
        app:layout_constraintTop_toTopOf="@id/previewImage" />



    <TextView
        android:id="@+id/sizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇尺寸"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/previewImage"
        app:layout_constraintStart_toStartOf="parent"/>

    <RadioGroup
        android:id="@+id/sizeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/sizeLabel"
        app:layout_constraintStart_toStartOf="parent"/>



    <TextView
        android:id="@+id/qtyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="數量"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/sizeGroup"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/qtySelector"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/qtyLabel"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"/>

        <TextView
            android:id="@+id/txtQty"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"/>
    </LinearLayout>


    <Button
        android:id="@+id/addToCartBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:text="加入購物車"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/qtySelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

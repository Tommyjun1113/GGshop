<resources>

    <style name="Theme.Shopping" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- App 主色 -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">@color/black</item>
        <!-- 狀態列設定（讓時間/WiFi 保持可見） -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- 讓畫面不要壓到狀態列 -->
        <item name="android:fitsSystemWindows">false</item>

    </style>

    <!-- BottomSheet -->
    <style name="Theme.BottomSheet.NoDim" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.Shopping.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>
